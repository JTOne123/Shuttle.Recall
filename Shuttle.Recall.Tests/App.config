<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="transactionScope" type="Shuttle.Core.Infrastructure.TransactionScopeSection, Shuttle.Core.Infrastructure"/>
    <section name="eventStore" type="Shuttle.Recall.EventStoreSection, Shuttle.Recall"/>
  </configSections>

  <transactionScope
      enabled="false"
      isolationLevel="RepeatableRead"
      timeoutSeconds="300" />

  <eventStore
    compressionAlgorithm="compression-algorithm"
    encryptionAlgorithm="encryption-algorithm"
    durationToSleepWhenIdle="1s"
    />
</configuration>